<VirtualHost *:80>
    ServerName {{ canvas_domain }}
    DocumentRoot /var/canvas/public
    PassengerRuby /usr/bin/ruby
    PassengerAppEnv production
    RailsEnv production
    <Directory /var/canvas/public>
        AllowOverride all
        Options -MultiViews
        Require all granted
    </Directory>
</VirtualHost>